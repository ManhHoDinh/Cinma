<Window x:Class="CinemaManagement.Views.Staff.MainStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaManagement.Views.Staff" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource MainStaffVM}"
        Name="Main_Staff"
        ResizeMode="NoResize"
        Height="800" Width="1440"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel LastChildFill="False">
            <StackPanel Width="200"                        
                        Background="#FF1F2F55">
                <Button BorderBrush="#FF16274D"
                        Width="200"
                        Height="100"
                        Background="Transparent">
                    <materialDesign:PackIcon Kind="Movie" Width="100" Height="100"/>
                </Button>
                <Button Content="Phim đang chiếu"
                        FontSize="20"
                        Height="50"
                        BorderBrush="#FF16274D"
                        Background="Transparent"/>
                <Button Content="Phim sắp chiếu"
                        FontSize="20"
                        Height="50"
                        BorderBrush="#FF16274D"
                        Background="Transparent"/>
                <Button Content="Thể loại"
                        FontSize="20"
                        Height="50"
                        BorderBrush="#FF16274D"
                        Background="Transparent"
                        Command="{Binding ButtonVisibility}"
                        CommandParameter="{Binding ElementName=Number12345}"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top"
                        Height="40"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Background="#FF263456">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding MouseMoveWindowCM}"
                                               CommandParameter="{Binding ElementName=Main_Staff}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Button Command="{Binding MinimizeMainStaffWindowCM}"
                        CommandParameter="{Binding ElementName=Main_Staff}"
                        Cursor="Hand"
                        Margin="1120 0 0 0">
                    <materialDesign:PackIcon Kind="WindowMinimize"></materialDesign:PackIcon>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Height" Value="20"></Setter>
                            <Setter Property="Width" Value="30"></Setter>
                            <Setter Property="BorderBrush" Value="#FF16274D"></Setter>
                            <Setter Property="Background" Value="#FF263456"></Setter>
                            <Setter Property="Foreground" Value="#DD0FE4E4"></Setter>
                            <Style.Triggers >
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Height" Value="30"></Setter>
                                    <Setter Property="Width" Value="40"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Foreground="#DD0FE4E4"
                        BorderBrush="#FF16274D"
                        Background="Transparent"
                        Cursor="Hand"
                        Command="{Binding CloseMainStaffWindowCM}"
                        CommandParameter="{Binding ElementName=Main_Staff}">
                    <materialDesign:PackIcon Kind="WindowClose"/>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Height" Value="20"></Setter>
                            <Setter Property="Width" Value="30"></Setter>
                            <Setter Property="BorderBrush" Value="#FF16274D"></Setter>
                            <Setter Property="Background" Value="#FF263456"></Setter>
                            <Setter Property="Foreground" Value="#DD0FE4E4"></Setter>
                            <Style.Triggers >
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Height" Value="30"></Setter>
                                    <Setter Property="Width" Value="40"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top"
                        Height="60"
                        VerticalAlignment="Top"
                        Orientation="Horizontal" 
                        Background="#FF16274D">
                <materialDesign:PackIcon Kind="Magnify" 
                                         Width="25"
                                         Height="35"
                                         Foreground="White"
                                         Margin="15 22 0 0"
                                         VerticalAlignment="Center"/>
                <TextBlock Width="500"
                           Height="40"
                           FontSize="25"
                           Foreground="White"
                           Margin="10 25 0 10">
                    <Italic>Tìm kiếm phim</Italic>
                </TextBlock>
                <TextBlock VerticalAlignment="Center"
                           Width="100"
                           Height="25"
                           FontSize="22"
                           Foreground="White"
                           Margin="450 25 0 0">
                    <Italic>Username</Italic></TextBlock>
                <Button Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Height="63">
                    <materialDesign:PackIcon Kind="AccountCircle" Width="60" Height="60"/>
                </Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Left" Background="#FF0E1C40"
                        x:Name="Number12345" Visibility="Collapsed"
                        >
                <Button Content="1"
                        BorderBrush="#FF1F2F55"
                        Width="50"
                        Height="75"
                        Background="Transparent"/>
                <Button Content="2"
                        BorderBrush="#FF1F2F55"
                        Width="50"
                        Height="75"
                        Background="Transparent"/>
                <Button Content="3"
                        BorderBrush="#FF1F2F55"
                        Width="50"
                        Height="75"
                        Background="Transparent"/>
                <Button Content="4"
                        BorderBrush="#FF1F2F55"
                        Width="50"
                        Height="75"
                        Background="Transparent"/>
                <Button Content="5"
                        BorderBrush="#FF1F2F55"
                        Width="50"
                        Height="75"
                        Background="Transparent"/>
            </StackPanel>
            <Grid Height="700"
                  Width="1190">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <WrapPanel Background="#FF2B3D66">
                        <StackPanel Width="235"
                                    Height="300"
                                    Margin="50 30 0 30">
                            <Image Source="/Resources/LayoutSignin/conan_movie_24.jpg" 
                                   Height="260" Margin="0,0,49,0"
                                   />
                            <TextBlock Text="Tham tu lung danh conan"
                                       FontSize="20"
                                       Foreground="White"
                                       TextAlignment="Left"/>
                            <TextBlock Text="2020"
                                       FontSize="15"
                                       Foreground="#FFD6C6C3"
                                       TextAlignment="Left"
                                       Margin="0 0 0 0"/>
                        </StackPanel>
                        <StackPanel Width="235"
                                    Height="300"
                                    Margin="50 30 0 30">
                            <Image Source="/Resources/LayoutSignin/bo-gia.jpg" 
                                   Height="260" Margin="0,0,49,0"
                                   />
                            <TextBlock Text="Bố già"
                                       FontSize="20"
                                       Foreground="White"
                                       TextAlignment="Left"/>
                            <TextBlock Text="2021"
                                       FontSize="15"
                                       Foreground="#FFD6C6C3"
                                       TextAlignment="Left"
                                       Margin="0 0 0 0"/>
                        </StackPanel>
                        <StackPanel Width="235"
                                    Height="300"
                                    Margin="50 30 0 30">
                            <Image Source="/Resources/LayoutSignin/godzilla_vs_Kong.jpg" 
                                   Height="260" Margin="0,0,49,0"
                                   />
                            <TextBlock Text="Godzilla vs Kong"
                                       FontSize="20"
                                       Foreground="White"
                                       TextAlignment="Left"/>
                            <TextBlock Text="2021"
                                       FontSize="15"
                                       Foreground="#FFD6C6C3"
                                       TextAlignment="Left"
                                       Margin="0 0 0 0"/>
                        </StackPanel>
                        <StackPanel Width="235"
                                    Height="300"
                                    Margin="50 30 0 30">
                            <Image Source="/Resources/LayoutSignin/Mat_biec.jpg" 
                                   Height="260" Margin="0,0,49,0"
                                   />
                            <TextBlock Text="Mắt biếc"
                                       FontSize="20"
                                       Foreground="White"
                                       TextAlignment="Left"/>
                            <TextBlock Text="2019"
                                       FontSize="15"
                                       Foreground="#FFD6C6C3"
                                       TextAlignment="Left"
                                       Margin="0 0 0 0"/>
                        </StackPanel>
                    </WrapPanel>
                </ScrollViewer>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
